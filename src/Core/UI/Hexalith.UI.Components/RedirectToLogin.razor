@using Hexalith.Application.Modules.Applications
@inject NavigationManager NavigationManager
@inject Hexalith.UI.Components.Services.ILoginRedirectUrlService LoginRedirectUrlService
@inject IApplication Application

@code {
    protected override void OnInitialized()
    {
        var redirect = NavigationManager.Uri;
        if (string.IsNullOrWhiteSpace(redirect))
        {
            redirect = Application.HomePath;
        }
        NavigationManager.NavigateTo(LoginRedirectUrlService.GetRedirect(redirect), forceLoad: true);
    }
}
